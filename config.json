{
  "model": "xtts",
  "output_path": "/content/xtts_output",
  "max_steps": 5000,
  "datasets": [
    {
      "formatter": "ljspeech",
      "meta_file_train": "/content/xtts_data/metadata.csv",
      "path": "/content/xtts_data",
      "language": "en"
    }
  ],

  "audio": {
    "sample_rate": 16000,
    "win_length": 1024,
    "hop_length": 256,
    "fft_size": 1024,
    "num_mels": 80
  },

  "model_args": {
    "use_sound_norm_refs": false,
    "use_attn_mask": false,
    "use_alignment_module": false
  },

  "training": {
    "batch_size": 16,
    "grad_accum_steps": 1,
    "epochs": 100,
    "lr": 0.0001,
    "save_every_steps": 500,
    "eval_every_steps": 500,
    "checkpoint_path": "/content/drive/MyDrive/xtts_finetune/checkpoints"
  },

  "use_speaker_encoder_as_loss": true,
  "start_by_loading_latest_checkpoint": false,
  "run_name": "xtts_finetune_run",
  "use_wandb": false,
  "use_tensorboard": true,
  "mixed_precision": true,
  
  "test_sentences": [
    {
      "text": "This is a test of our Indian-accent voice clone.",
      "audio_path": "/content/xtts_data/wavs/clip_00000.wav",
      "language": "en",
      "reference_speaker_name": "clip_00000"
    }
  ],
  "gpt_model_path": "C:/xtts_finetune/checkpoints/XTTS_v2.0_original_model_files/model.pth",
  "dvae_model_path": "C:/xtts_finetune/checkpoints/XTTS_v2.0_original_model_files/dvae.pth",
  "vocab_path": "C:/xtts_finetune/checkpoints/XTTS_v2.0_original_model_files/vocab.json",
  "mel_stats_path": "C:/xtts_finetune/checkpoints/XTTS_v2.0_original_model_files/mel_stats.pth"

}
